<script>
  async function descargarImagen(url: string, nombreArchivo: string, boton: HTMLButtonElement) {
    // Cambiar estado del botón
    const textoOriginal = boton.innerText;
    boton.innerText = 'Descargando...';
    boton.disabled = true;
    
    // Función para restaurar el botón
    function restaurarBoton() {
      boton.innerText = textoOriginal;
      boton.disabled = false;
    }
    
    try {
      console.log('Iniciando descarga de:', url);
      
      // Método 1: Fetch y descarga directa
      const response = await fetch(url);
      if (!response.ok) {
        throw new Error(`Error HTTP: ${response.status}`);
      }
      
      const blob = await response.blob();
      console.log('Blob creado exitosamente');
      
      // Crear enlace de descarga
      const link = document.createElement('a');
      const urlBlob = URL.createObjectURL(blob);
      link.href = urlBlob;
      link.download = nombreArchivo;
      
      // Agregar al DOM y hacer clic
      document.body.appendChild(link);
      link.click();
      
      // Limpiar
      document.body.removeChild(link);
      URL.revokeObjectURL(urlBlob);
      
      console.log('Descarga completada');
      setTimeout(restaurarBoton, 500);
      
    } catch (error) {
      console.error('Error en método fetch, probando fallback:', error);
      
      // Método 2: Descarga directa (fallback)
      try {
        const link = document.createElement('a');
        link.href = url;
        link.download = nombreArchivo;
        link.target = '_blank';
        link.rel = 'noopener noreferrer';
        
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        
        console.log('Descarga fallback completada');
        setTimeout(restaurarBoton, 500);
        
      } catch (fallbackError) {
        console.error('Error en descarga fallback:', fallbackError);
        
        // Método 3: Abrir en nueva ventana (último recurso)
        window.open(url, '_blank');
        alert('Se abrió la imagen en una nueva ventana. Haz clic derecho y selecciona "Guardar imagen como..."');
        setTimeout(restaurarBoton, 500);
      }
    }
  }
</script>