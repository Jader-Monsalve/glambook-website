  return rol === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800';
}

function getRolTexto(rol: string) {
  return rol === 'admin' ? 'üëë Admin' : 'üë§ Cliente';
}

