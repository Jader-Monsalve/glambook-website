---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm.astro';

const title = "Acceso Administrador - GlamBook";
---

<Layout title={title}>
  <!-- Spacer para el navbar fixed -->
  <div class="h-16 sm:h-20 lg:h-24"></div>
  
  <section class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 py-12 px-4 flex items-center justify-center relative overflow-hidden">
    
    <!-- Efectos de fondo -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-10 left-10 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
      <div class="absolute top-40 right-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse delay-1000"></div>
      <div class="absolute bottom-10 left-1/2 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse delay-2000"></div>
    </div>
    
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg width="60" height="60" viewBox="0 0 60 60" class="w-full h-full">
        <g fill="none" stroke="currentColor" stroke-width="1">
          <path d="M60 0H0v60h60z"/>
          <path d="M30 0v60M0 30h60"/>
        </g>
      </svg>
    </div>

    <div class="relative z-10 w-full max-w-md">
      
      <!-- Logo y título -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-pink-500 to-purple-600 rounded-2xl mb-6 shadow-2xl">
          <span class="text-3xl">👑</span>
        </div>
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-2 font-poppins">
          Admin Panel
        </h1>
        <p class="text-gray-300 text-lg font-poppins">
          Acceso exclusivo para administradores
        </p>
        
        <!-- Decoración -->
        <div class="flex items-center justify-center mt-4 space-x-2">
          <div class="w-12 h-0.5 bg-gradient-to-r from-transparent to-pink-400"></div>
          <div class="w-2 h-2 bg-pink-400 rounded-full"></div>
          <div class="w-12 h-0.5 bg-gradient-to-l from-transparent to-pink-400"></div>
        </div>
      </div>

      <!-- Formulario de Login -->
      <LoginForm />
      
      <!-- Enlaces adicionales -->
      <div class="text-center mt-8 space-y-4">
        <div class="flex items-center justify-center space-x-4 text-gray-400">
          <div class="h-px bg-gray-600 flex-1"></div>
          <span class="px-4 text-sm font-poppins">¿Necesitas ayuda?</span>
          <div class="h-px bg-gray-600 flex-1"></div>
        </div>
        
        <div class="space-y-2">
          <a href="/contact" 
             class="block text-gray-300 hover:text-pink-400 text-sm font-poppins transition-colors duration-300">
            📧 Contactar soporte técnico
          </a>
          <a href="/" 
             class="block text-gray-300 hover:text-pink-400 text-sm font-poppins transition-colors duration-300">
            🏠 Volver al inicio
          </a>
        </div>
      </div>

    </div>
  </section>
</Layout>