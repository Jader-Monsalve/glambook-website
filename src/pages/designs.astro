---
import Layout from '../layouts/Layout.astro';
const title = "Galería de Trabajos - GlamBook";
---

<Layout title={title}>
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <!-- Título -->
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-800 mb-4 font-poppins">
          Galería de Trabajos
        </h1>
        <p class="text-gray-600 text-lg font-poppins">
          Descubre nuestros mejores trabajos y déjate inspirar
        </p>
      </div>

      <!-- Grid de imágenes -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        
        <!-- Card 1 -->
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="h-64 bg-gradient-to-br from-pink-200 to-purple-200 flex items-center justify-center">
            <span class="text-gray-500 font-poppins">Próximamente</span>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 font-poppins">Uñas Artísticas</h3>
            <p class="text-gray-600 text-sm font-poppins">Diseños únicos y creativos</p>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="h-64 bg-gradient-to-br from-yellow-200 to-orange-200 flex items-center justify-center">
            <span class="text-gray-500 font-poppins">Próximamente</span>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 font-poppins">Maquillaje Profesional</h3>
            <p class="text-gray-600 text-sm font-poppins">Para ocasiones especiales</p>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="h-64 bg-gradient-to-br from-green-200 to-blue-200 flex items-center justify-center">
            <span class="text-gray-500 font-poppins">Próximamente</span>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 font-poppins">Peinados</h3>
            <p class="text-gray-600 text-sm font-poppins">Estilos modernos y elegantes</p>
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>