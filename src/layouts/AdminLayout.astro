		<meta name="generator" content={Astro.generator} />
		
		<!-- Chart.js CDN -->
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
