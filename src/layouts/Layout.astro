---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

interface Props {
	title: string
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Fuentes optimizadas con preload para mejor rendimiento -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Quicksand:wght@400;500;600&display=swap" rel="stylesheet">
		
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content="GlamBook - Salón de belleza profesional especializado en uñas, maquillaje y cuidado personal. Servicios de calidad con los mejores productos." />
		<meta name="keywords" content="salón de belleza, uñas, maquillaje, peinados, cejas, pestañas, cuidado personal, manicura, pedicura" />
		<meta name="author" content="GlamBook" />
		
		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Salón de belleza profesional especializado en uñas, maquillaje y cuidado personal." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://glambook-jader.netlify.app" />
		<meta property="og:image" content="https://glambook-jader.netlify.app/Images/Maquillaje.jpg" />
		
		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Salón de belleza profesional especializado en uñas, maquillaje y cuidado personal." />
		<meta name="twitter:image" content="https://glambook-jader.netlify.app/Images/Maquillaje.jpg" />
		
		<!-- Additional Meta Tags -->
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#ec4899" />
		<link rel="canonical" href="https://glambook-jader.netlify.app" />
	</head>

	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style>
	/* Optimizaciones responsive globales */
	html {
		margin: 0;
		width: 100%;
		height: 100%;
		/* Smooth scroll para toda la página */
		scroll-behavior: smooth;
		/* Mejorar rendering de texto */
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		/* Prevenir zoom horizontal en móviles */
		overflow-x: hidden;
		/* Configuración de fuentes responsive */
		font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
		line-height: 1.6;
		/* Mejorar el escalado de texto en iOS */
		-webkit-text-size-adjust: 100%;
		-ms-text-size-adjust: 100%;
	}
	
	/* Optimizaciones para dispositivos táctiles */
	@media (hover: none) and (pointer: coarse) {
		/* Aumentar ligeramente el tamaño de elementos interactivos en móviles */
		button, 
		[role="button"], 
		input[type="submit"], 
		input[type="button"] {
			min-height: 44px;
			min-width: 44px;
		}
	}
	
	/* Optimizar imágenes para dispositivos de alta densidad */
	img {
		max-width: 100%;
		height: auto;
		/* Suavizar imágenes escaladas */
		image-rendering: -webkit-optimize-contrast;
		image-rendering: crisp-edges;
	}
	
	/* Mejorar rendimiento de animaciones en móviles */
	*, 
	*::before, 
	*::after {
		/* Usar GPU para transformaciones */
		transform: translateZ(0);
		-webkit-backface-visibility: hidden;
		backface-visibility: hidden;
	}
	
	/* Focus styles mejorados para accesibilidad */
	*:focus {
		outline: 2px solid #ec4899;
		outline-offset: 2px;
	}
	
	/* Ocultar scrollbar horizontal pero mantener funcionalidad */
	body::-webkit-scrollbar-x {
		display: none;
	}
	
	/* Estilos específicos para pantallas muy pequeñas */
	@media (max-width: 320px) {
		body {
			font-size: 14px;
		}
	}
</style>
