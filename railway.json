{
  "name": "glambook-website",
  "version": "1.0.0",
  "build": {
    "buildCommand": "npm run build",
    "outputDirectory": "dist"
  },
  "deploy": {
    "startCommand": "node ./dist/server/entry.mjs",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "$PORT",
    "HOST": "0.0.0.0"
  }
}